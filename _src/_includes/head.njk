	<link rel="preconnect" href="//d33wubrfki0l68.cloudfront.net" />
	<link rel="dns-prefetch" href="//d33wubrfki0l68.cloudfront.net" />
	<link rel="preload" href="/main.css" as="style" />
	<link rel="preload" href="/main.min.js" as="script" />
	<link rel="preload" href="//polyfill.io/v3/polyfill.min.js?features=default" as="script">

	<link rel="stylesheet" href="/main.css">

	<script>
		window.__preferences = ['dark_mode', 'reduced_motion'];
		var doc = document.documentElement;

		for (var i in window.__preferences) {
			var preference = window.__preferences[i];
			var locallySaved = JSON.parse(localStorage.getItem(preference));
			if (locallySaved == undefined) locallySaved = false;

			doc.classList.toggle(preference, locallySaved);
			localStorage.setItem(preference, locallySaved);
		}
	</script>
	<script defer src="//polyfill.io/v3/polyfill.min.js?features=default"></script>
	<script defer src="/main.min.js"></script>
</head>