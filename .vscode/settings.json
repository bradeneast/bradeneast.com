{
    "html.format.enable": false,
    "liveServer.settings.root": "/public",
    "liveServer.settings.file": "/404/index.html",
    "typescript.validate.enable": false,
    "liveSassCompile.settings.formats": [
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/public/_assets/css"
        }
    ],
    "minify.minifyExistingOnSave": false,
    "saveAndRun": {
        "commands": [
            {
                "match": "\\.ts|\\.html|\\.md",
                "cmd": "deno run --allow-read --allow-write ./build/build.ts",
                "isAsync": true,
                "silent": true
            },
            {
                "match": "\\.js",
                "cmd": "esbuild --bundle ./js/main/main.js --outdir=./js --minify",
                "silent": true
            },
            {
                "match": "\\.js",
                "cmd": "esbuild --bundle ./js/search/search.js --outdir=./js --minify",
                "silent": true
            },
            {
                "match": "\\.js",
                "cmd": "esbuild --bundle ./js/random/random.js --outdir=./js --minify",
                "silent": true
            },
            {
                "match": "\\.js",
                "cmd": "tsc",
                "silent": true
            }
        ]
    },
}