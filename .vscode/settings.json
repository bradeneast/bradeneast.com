{
    "liveServer.settings.root": "/public",
    "liveSassCompile.settings.formats": [
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/public/_assets/css"
        }
    ],
    "saveAndRun": {
        "commands": [
            {
                "match": "\\.ts",
                "cmd": "deno run --allow-read --allow-write ./build/build.ts",
                "silent": true
            }
        ]
    },
    "minify.js": {
        "mangle": true,
        "compress": {
            "collapse_vars": true,
        }
    }
}